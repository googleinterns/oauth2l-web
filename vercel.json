{
  "version": 2,
  "builds": [
    { "src": "/web/api/backend.go", "use": "@vercel/go" },
    {
      "src": "/web/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/web/api/backend.go"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/web/client/static/$1"
    },
    { "src": "/favicon.ico", "dest": "/web/client/favicon.ico" },
    { "src": "/asset-manifest.json", "dest": "/web/client/asset-manifest.json" },
    { "src": "/manifest.json", "dest": "/web/client/manifest.json" },
    { "src": "/precache-manifest.(.*)", "dest": "/web/client/precache-manifest.$1" },
    {
      "src": "/service-worker.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/web/client/src/service-worker.js"
    },
    {
      "src": "/clogo.png",
      "dest": "/web/client/clogo.png"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/web/client/index.html"
    }
  ]
}
